aside.main-sidebar
    // sidebar: style can be found in sidebar.less
    section.sidebar
        // Sidebar user panel
        .user-panel
            .pull-left.image
                img.img-circle(src='/adminlte/dist/img/user2-160x160.jpg' alt='User Image')
            .pull-left.info
                p #{session_store.username}
                a(href='#')
                    i.fa.fa-circle.text-success
                    |  Online
        ul.sidebar-menu(data-widget='tree')
            li.header MAIN NAVIGATION
                li.treeview
                    a(href='/')
                        i.fa.fa-dashboard
                        span Dashboard
                if(session_store.admin == true)
                    li.treeview
                        a(href='#')
                            i.fa.fa-laptop
                            span Data FakeCell & Penjualan
                            span.pull-right-container
                                i.fa.fa-angle-left.pull-right
                        ul.treeview-menu
                            li
                                a(href='/inputcell')
                                    i.fa.fa-circle-o
                                    |  Input Stock Barang
                            li
                                a(href='/datakonter')
                                    i.fa.fa-circle-o
                                    |  Lihat Stock Barang


                                li.treeview
                                    a(href='#')
                                        i.fa.fa-laptop
                                        span Data Penjualan
                                        span.pull-right-container
                                            i.fa.fa-angle-left.pull-right
                                    ul.treeview-menu
                                        li
                                            a(href='/inputpenjualan')
                                                i.fa.fa-circle-o
                                                |  Input penjualan
                                        li
                                            a(href='/penjualan')
                                                i.fa.fa-circle-o
                                                |  Lihat penjualan

    // /.sidebar