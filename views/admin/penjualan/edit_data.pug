include  ../../admin/index
// Content Wrapper. Contains page content
.content-wrapper
    // Content Header (Page header)
    section.content-header
        h1
            | Data FakeCell
        ol.breadcrumb
            li
                a(href='#')
                    i.fa.fa-dashboard
                    |  Home
            li
                a(href='#') Tables
            li.active Data tables
    // Main content
    section.content
        .row
            .col-xs-12
                // /.box-body
                // /.box
                .box
                    .box-body
                        .box.box-info
                            .box-header.with-border
                                h3.box-title Input data penjualan
                            // /.box-header
                            // form start
                            form.form-horizontal(method="POST", action='/'+penjualann._id + '/editpenjualan')
                                .box-body
                                    .form-group
                                        label.col-sm-2.control-label(for='nopenjualan') No Penjualan
                                        .col-sm-10
                                            input#nopenjualan.form-control(type='text' name="nopenjualan" placeholder='No Penjualan' value= (nopenjualan == undefined) ? penjualann.nopenjualan: nopenjualan)
                                    .form-group
                                        label.col-sm-2.control-label(for='tglpenjualan') Tglpenjualan
                                        .col-sm-10
                                            input#tglpenjualan.form-control(type='text' name="tglpenjualan" placeholder='tglpenjualan' value= (tglpenjualan == undefined) ? penjualann.tglpenjualan: tglpenjualan)
                                    .form-group
                                        label.col-sm-2.control-label(for='jumlah') jumlah
                                        .col-sm-10
                                            input#jumlah.form-control(type='text' name="jumlah" placeholder='jumlah' value= (jumlah == undefined) ? penjualann.jumlah: jumlah)
                                    .form-group
                                        label.col-sm-2.control-label(for='harga') Harga Rp.
                                        .col-sm-10
                                            input#harga.form-control(type='text' name="harga" placeholder='Harga Rp.' value= (harga == undefined) ? penjualann.harga: harga)


                                // /.box-body
                                .box-footer
                                    button.btn.btn-info.pull-right(type='submit') Input Data
                                // /.box-footer